<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="30dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Publish the strategy"
        android:paddingBottom="20dp"
        android:id="@+id/dialog_description"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/str_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/instruction_img"
        >
        <android.support.design.widget.TextInputEditText
            android:id="@+id/str_name_text"
            android:hint="Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="actionGo"
            android:inputType="textNoSuggestions"
            android:singleLine="true"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/str_map"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/instruction_img"
        >
        <android.support.design.widget.TextInputEditText
            android:id="@+id/str_map_text"
            android:hint="Map"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="actionGo"
            android:inputType="textNoSuggestions"
            android:singleLine="true"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/str_civ"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/instruction_img"
        >
        <android.support.design.widget.TextInputEditText
            android:id="@+id/str_civ_text"
            android:hint="Civilization"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="actionGo"
            android:inputType="textNoSuggestions"
            android:singleLine="true"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/str_aut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/instruction_img"
        >
        <android.support.design.widget.TextInputEditText
            android:id="@+id/str_aut_text"
            android:hint="Author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="actionGo"
            android:inputType="textNoSuggestions"
            android:singleLine="true"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/str_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/instruction_img"
        >
        <AutoCompleteTextView
            android:id="@+id/str_img_text"
            android:hint="Image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="actionGo"
            android:inputType="textNoSuggestions"
            android:singleLine="true"/>
    </android.support.design.widget.TextInputLayout>


</LinearLayout>